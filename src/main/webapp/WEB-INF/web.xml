<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>drugref2</display-name>


    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>classpath:spring_config.xml</param-value>
    </context-param>

	
	<!-- Listeners -->
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <!--listener>
        <listener-class>org.oscarehr.caisi_integrator.util.ContextStartupListener</listener-class>
    </listener-->





    <servlet>
        <servlet-name>DrugrefService</servlet-name>
        <servlet-class>org.drugref.DrugrefService</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DrugrefService</servlet-name>
        <url-pattern>/DrugrefService</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
