<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d %-5p %C{2} (%F:%L) - %m%n"/>
        </Console>
    </Appenders>
    <Loggers>

        <logger name="openjpa" level="OFF" additivity="false">
            <appenderRef ref="Console" />
        </logger>
        <Logger name="org.apache.log4j.xml" level="ERROR">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="org.eclipse.persistence" level="WARN">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="eclipselink" level="WARN">
            <AppenderRef ref="Console"/>
        </Logger>
        <Root level="INFO">
            <AppenderRef ref="Console" />
        </Root>
    </Loggers>
</Configuration>
